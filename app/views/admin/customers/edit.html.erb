<div class="container height">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <div class="row">
      <%= form_for(@customer, url: admin_customer_path) do |f| %>
      <div class="col-xs-10">
        <div class="field">
          <%= f.label :会員ID, class:"col-xs-3" %>
          <%= f.text_field:id, autofocus: true, autocomplete: "id" %>
        </div><br>

       <div class="field">
         <%= f.label:氏名, class: "col-xs-3" %>
         <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
         <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
       </div><br>

       <div class="field">
         <%= f.label:フリガナ, class: "col-xs-3" %>
         <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
         <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
       </div><br>

        <div class="field">
         <%= f.label:郵便番号, class: "col-xs-3" %>
         <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
       </div><br>

        <div class="field">
         <%= f.label:住所, class: "col-xs-3" %>
         <%= f.text_field :address, autofocus: true, autocomplete: "address",size: "50" %>
       </div><br>

        <div class="field">
         <%= f.label:電話番号, class: "col-xs-3" %>
         <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
       </div><br>

        <div class="field">
         <%= f.label:メールアドレス, class: "col-xs-3" %>
         <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
       </div><br>

        <div class="field text-left">
         <%= f.label:会員ステータス, class: "col-xs-3" %>
         <label><%= f.radio_button :is_deleted, "有効", checked:"checked" %>有効</label>
         <label><%= f.radio_button :is_deleted, "無効" %>退会</label>
       </div>

        <div class="text-right"><%= f.submit '変更を保存', class:"btn btn-primary" %></div>
      <% end %>
      </div>
  </div>
</div>