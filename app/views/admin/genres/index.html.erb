<div class="container height">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="field row">
      <label>ジャンル名</label>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
    </div>
    <% end %>
    <br>
    <table class="table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
         <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
         </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>