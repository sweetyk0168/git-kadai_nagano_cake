<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <table>
    <td><%= f.label :"ジャンル名" %></td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit '新規登録' %></td>
  </table>
<% end %>

<th>ジャンル</th>
<% @genres.each do |genre| %>
  <td><%= genre.name %></td>
  <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
<% end %>
