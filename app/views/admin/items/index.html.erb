<div class="container height">
  <h3>商品一覧</h3>
  <div class="text-right index-new">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn-outline-dark btn-circle btn-lg">+</button>
    <% end %>
  </div>
  <table class="table-hover">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><%= item_status_name(item) %></td>
    </tr>
   <% end %>
  </tbody>
</table>
<%= paginate @items %>
</div>