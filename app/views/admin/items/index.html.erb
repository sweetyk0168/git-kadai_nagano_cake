<h2>商品一覧</h2>
<%= link_to new_admin_item_path do %>
  <button type="button" class="btn btn-success btn-success btn-circle btn-lg">+</button>
<% end %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><%= item_status_name(item) %></td>
    </tr>
   <% end %>
  </tbody>
</table>
<%= paginate @items %>