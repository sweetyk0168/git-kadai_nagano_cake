<div class="container height">
  <h2>商品新規登録</h2><br>
  <div class="col-xs-4">
  <%= form_for(@item, url:admin_items_path) do |f| %>
    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %><br>
  <%#= f.attachment_field:image, placeholder: "商品画像" %>
    <div class="col-xs-8">
      <label>商品名</label>
      <!--<div class="field">-->
        <%= f.text_field:name, autofocus: true, autocomplete: "name", placeholder: "商品名" %><br>
      <!--</div>-->
      <label>商品説明</label>
      <!--<div class="field">-->
        <%= f.text_area:introduction, autofocus: true, autocomplete: "introduction", placeholder: "商品説明文" %><br>
      <!--</div>-->
      <label>ジャンル</label>
      <!--<div class="field">-->
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %><br>
      <!--</div>-->
      <label>税抜き価格</label>
      <!--<div class="field">-->
        <%= f.text_field:price, autofocus: true, autocomplete:"price",  placeholder: "1000" %>円<br>
      <!--</div>-->
      <label>販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active,"販売中",{value: :true,style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block"} %><br>
      <%= f.submit '新規登録', class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
