<div class="container">
  <h2>商品詳細</h2>
<div class="row">
  <div class="col-md-3">
    <%= image_tag @item.get_image(100,100) %>
  </div>
<div class="col-md-9">
    <label>商品名</label>
    <%= @item.name %>
    <label>商品説明</label>
    <%= @item.introduction %>
    <label>ジャンル</label>
    <%= @item.genre.name %>
    <label>税込価格<br>（税抜価格）</label>
    <%= @item.add_tax_sales_price.to_s(:dalimited) %> (<%= @item.price %>)円
    <label>販売ステータス</label>
    <%= @item.is_active %>
    <%= button_to '編集する', edit_admin_item_path(@item) %>
</div>
  </div>
</div>