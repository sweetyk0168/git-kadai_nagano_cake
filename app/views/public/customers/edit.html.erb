<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_information_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: f.object %>
  <label>氏名</label>
  <div class="field">
    <%= f.text_field :last_name, autofocus:true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus:true, autocomplete: "first_name" %>
  </div>

  <label>フリガナ</label>
  <div class="field">
    <%= f.text_field :last_name_kana, autofocus:true, autocomplete: "last_name_kana" %>
    <%= f.text_field :first_name_kana, autofocus:true, autocomplete: "first_name_kana" %>
  </div>
  <label>郵便番号</label>
    <div class="field">
    <%= f.text_field :postal_code, autofocus:true, autocomplete: "postal_code" %>
  </div>
  <label>住所</label>
    <div class="field">
    <%= f.text_field :address, autofocus:true, autocomplete: "address" %>
  </div>
  <label>電話番号</label>
    <div class="field">
    <%= f.text_field :telephone_number, autofocus:true, autocomplete: "telephone_number" %>
  </div>
  <label>メールアドレス</label>
    <div class="field">
    <%= f.text_field :email, autofocus:true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
  <%= link_to "退会する", customers_confirm_withdraw_path %>
<% end %>