<h2>注文情報確認</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0 %>
    <% @cart_items.each do |cart| %>
    <tr>
      <td>
        <%= image_tag cart.item.get_image(100,100) %>
        <%= cart.item.name %>
      </td>
      <td>
        <%= (cart.item.add_tax_sales_price*1.1).to_i %>
      </td>
      <td>
        <%= cart.amount %>
      </td>
      <td>
        <%= ((cart.item.add_tax_sales_price*cart.amount)*1.1).to_i %>
        <% total += ((cart.item.add_tax_sales_price*cart.amount)*1.1).to_i %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= total %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= total + @order.postage %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>お届け先</th>
      <td><%= @order.postcode %><%= @order.address %>
          <%= @order.name %>
      </td>
    </tr>
  </thead>
</table>
<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :postcode %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :postage, :value => @order.postage %>
  <%= f.hidden_field :payment, :value => total + @order.postage %>
  <%= f.submit "注文を確定する" %>
<% end %>