<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
   <tbody>
     <% total = 0 %>
     <tr>
       <td><%= order.created_at.to_s(:datetime_jp) %></td>
       <td><%= order.postcode %><%= order.address %><%= order.customer.last_name %><%= order.customer.first_name %></td>
       <td><% order.order_details.each do | order_detail| %>
               <%= order_detail.item.name %>
            <% end %>
      </td>
      <td><% order.order_details.each do | order_detail| %>
        <%= ((order_detail.item.add_tax_sales_price * order_detail.amount)*1.1).to_i %>
            <% total += ((order_detail.item.add_tax_sales_price*order_detail.amount)*1.1).to_i %>
        <% end %>
       </td>
       <td><%= order.order_status %></td>
       <td><%= link_to '表示する', order_path(order.id) %> </td>
     </tr>
   </tbody>
  <% end %>
</table>
<%= paginate @orders %>
