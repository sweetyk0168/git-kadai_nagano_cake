<div class="container height">
  <div class="row">
    <div class="col-xs-7">
      <h2>注文情報入力</h2>
      <p><%= notice %></p>

      <%= form_with model: @order, url: confirm_orders_path, method: :post, local:true do |f| %>
      <h5><strong>支払方法</strong></h5>
      <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
      <%= f.label :"クレジットカード" %>

      <%= f.radio_button :payment_method, :"銀行振込" %>
      <%= f.label :"銀行振込" %>

      <h5><strong>お届け先</strong></h5>
      <%= f.radio_button :my_address, "1", checked: true %>
      <%= f.label :"ご自身の住所" %><br>
      〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %><br>

  <%#= f.radio_button :my_address, "2" %>
  <%#= f.label :"登録住所からの選択" %><br>
  <%#= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>
    <%#= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  <%# end %>

      <%= f.radio_button :my_address, "3" %>
      <%= f.label :"新しいお届け先" %><br>
      <%= f.label :"郵便番号（ハイフンなし）" %><br>
      <%= f.text_field :postal_code, placeholder:"0000000" %><br>
      <%= f.label :"住所" %><br>
      <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町０－０" %><br>
      <%= f.label :"宛名" %><br>
      <%= f.text_field :name , placeholder:"令和道子" %><br>

      <%= f.submit "確認画面へ進む", class: "btn btn-primary text-center" %>
      <% end %>
    </div>
  </div>
</div>
