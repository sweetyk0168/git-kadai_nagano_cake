<div class="container height">
  <h3>注文履歴詳細</h3><br>
  <div class="row">
    <div class="col-xs-6">
      <h5>注文情報</h5>
      <table>
       <tbody>
         <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
         </tr>
         <tr>
           <th>配送先</th>
            <td><%= @order.postcode %><br><%= @order.address %><br><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
         </tr>
         <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
         </tr>
         <tr>
           <th>ステータス</th>
            <td><%= @order.order_status %></td>
         </tr>
       </tbody>
      </table>
      <h5>注文内容</h5>
      <table>
        <tbody>
          <tr>
            <th>商品</th>
             <th>単価（税込）</th>
             <th>個数</th>
             <th>小計</th>
          </tr>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price * order_detail.amount) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
   <div class="col-xs-6">
     <div class="row">
       <br><h5>請求情報</h5>
      <table>
        <tbody>
            <% total = 0 %>
            <tr>
              <th>商品合計</th>
              <%# @order_details.each do |order_detail| %>
              <td><%#= (order_detail.price * order_detail.amount) %>
                  <%# total += (order_detail.price * order_detail.amount) %>
                  <%= @order.payment - 800 %>
              </td>
            </tr>
          <%# end %>
            <tr>
              <th>配送料</th>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td><%= @order.payment.to_s(:delimited) %></td>
            </tr>
        </tbody>
      </table>
     </div>
   </div>
  </div>
</div>
