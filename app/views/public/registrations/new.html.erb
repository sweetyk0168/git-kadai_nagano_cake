<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <label>名前</label>
  <label>（姓）</label>
  <div class="field">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和" %>
  </div>
　<label>（名）</label>
  <div class="field">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
  </div>

　<label>フリガナ</label>
　<label>（セイ）</label>
  <div class="field">
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
  </div>
　<label>（メイ）</label>
  <div class="field">
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
  </div>
  <label>メールアドレス</label>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  <div>郵便番号（ハイフンなし）</div>
  <div class="field">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
  </div>
  <label>住所</label>
  <div class="field">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  <label>電話番号（ハイフンなし）</label>
  <div class="field">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000" %>
  </div>
  <label>パスワード（6文字以上）</label>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <label>パスワード（確認用）</label>
  <div class="field">
    <%= f.password_field :password_confirmation, autofocus: true,trueutocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<br>
<h2>既に登録済みの方</h2>
<p><%= link_to 'こちら' , customer_session_path %></p>

<%= render "public/shared/links" %>
